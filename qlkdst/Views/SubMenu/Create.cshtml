@model qlkdstDB.EF.submenu
<style>
    /*.btn {
        background-color: DodgerBlue;
        border: none;
        color: white;
        padding: 12px 16px;
        cursor: pointer;
    }*/

    /* Darker background on mouse-over */
    .btn:hover {
        background-color: RoyalBlue;
    }
</style>
<script src="~/Scripts/script-custom-validator.js"></script>

<div class="wthree_general graph-form agile_info_shadow ">
    <h3 class="w3_inner_tittle two">THÊM MENU </h3>

    <div class="grid-1 ">
        <div class="form-body">

            @using (Html.BeginForm("Create", "SubMenu", FormMethod.Post, new { @id = "frmSubMenu",@class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
                @Html.HiddenFor(model => model.menuid)


                <div class="form-group">
                    <label for="areaname" class="col-sm-2 control-label">   Tên Menu:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.menunm, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">

                    <label for="areamvc" class="col-sm-2 control-label">    Area MVC:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.areamvc, new { @class = "form-control" })
                    </div>

                    <label for="actionnm" class="col-sm-2 control-label">   Action name:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.actionnm, new { @class = "form-control" })
                    </div>

                    <label for="controllernm" class="col-sm-2 control-label">   Controller name:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.controllernm, new { @class = "form-control" })
                    </div>

                </div>

                <div class="form-group">
                    <label for="areaid" class="col-sm-2 control-label">    Chọn khu:</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("areaid", null, string.Empty, new { @class = "form-control" })
                    </div>

                    <label for="Role" class="col-sm-2 control-label">    Loại người dùng:</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("Role", null, string.Empty, new { @class = "form-control" })
                    </div>

                    <label for="classcss" class="col-sm-2 control-label">     CSS:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.classcss, new { @class = "form-control" })
                    </div>

                </div>

                <div class="form-group">                 

                    <label for="controllernm" class="col-sm-2 control-label">    Thứ tự sắp xếp:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.thutu, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">

                    <label for="txtnguoitao" class="col-sm-2 control-label">   Người tạo:</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nguoitao, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                    <label for="txtngaytao" class="col-sm-2 control-label">   Ngày tạo:</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.ngaytao, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                </div>
                <div class="col-sm-offset-2">
                    <button name="submit" class="btn btn-primary" id="btnSave"><i class="fa fa-save"></i>Lưu</button>
                    @*<button class="btn btn-primary" id="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i>Hủy</button>*@
                    @Html.ActionLink("Hủy", "Cancel", "SubMenu", null, new { @class = "btn btn-danger fa fa-close" })
                </div>

            }

        </div>
    </div>
</div>

         