        <!-- /w3_agileits_top_nav-->
        <!-- /nav-->
        <div class="w3_agileits_top_nav">
            <ul id="gn-menu" class="gn-menu-main">

                <!-- //nav_agile_w3l -->
                <li class="second logo"><h1><a href=@Url.Action("Index","Home")><i class="fa fa-graduation-cap" aria-hidden="true"></i>QUẢN LÝ KHÁCH ĐOÀN @{ string sCN = Session["chinhanh"] == null ? "" : Session["chinhanh"].ToString();} @sCN</a></h1></li>

