        <div class="inner_content">
            <!-- /inner_content_w3_agile_info-->
            <div class="inner_content_w3_agile_info">

                <div class="registration admin_agile">

                    <div class="signin-form profile admin">
                        <h2>ĐỔI MẬT KHẨU</h2>
                        @using (Html.BeginForm("ChangePass", "User", FormMethod.Post))
                        {
                            <div class="login-form">
                                <form action="main-page.html" method="post">
                                    @Html.TextBoxFor(model => model.username, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.PasswordFor(model => model.oldpassword, new { @class = "form-control", @autofocus = "autofocus", placeholder = "Mật khẩu cũ" })
                                    @Html.PasswordFor(model => model.newpassword, new { @class = "form-control", @autofocus = "autofocus", placeholder = "Mật khẩu mới" })
                                    @Html.PasswordFor(model => model.repeatnewpassword, new { @class = "form-control", @autofocus = "autofocus", placeholder = "Nhập lại mật khẩu mới" })

                                    <div class="tp">
                                        <input type="submit" value="Đồng ý">
                                    </div>

                                </form>
                            </div>
                        }

                        @if (TempData["AlertMessage"] != null)
                        {
                            <div class='@TempData["AlertType"]' role="alert">
                                <strong> @TempData["AlertMessage"]</strong>
                            </div>

                            TempData["AlertType"] = null;
                            TempData["AlertMessage"] = null;
                        }
