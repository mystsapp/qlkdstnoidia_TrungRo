@model qlkdstDB.EF.chinhanh
<style>
    /*.btn {
        background-color: DodgerBlue;
        border: none;
        color: white;
        padding: 12px 16px;
        cursor: pointer;
    }*/

    /* Darker background on mouse-over */
    .btn:hover {
        background-color: RoyalBlue;
    }
</style>
<script src="~/Scripts/script-custom-validator.js"></script>

<div class="wthree_general graph-form agile_info_shadow ">
    <h3 class="w3_inner_tittle two">THÊM CHI NHÁNH </h3>

    <div class="grid-1 ">
        <div class="form-body">

            @using (Html.BeginForm("Create", "CN", FormMethod.Post, new { @id = "frmCN", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

                <div class="form-group">

                    @*<label for="txtmakh" class="col-sm-2 control-label"> Mã:</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.Id, new { @id = "txtId", @class = "form-control", @readonly = "readonly" })
                        </div>*@
                    <label for="txtmacn" class="col-sm-2 control-label"> Mã chi nhánh:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model =>model.chinhanh1, new { @id = "txtmacn", @class = "form-control" })
                    </div>

                    <label for="txtcn" class="col-sm-2 control-label"> Tên chi nhánh:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.tencn, new { @id = "txtcn", @class = "form-control" })
                    </div>

                    <label for="txtcn" class="col-sm-2 control-label"> Tên khu phân quyền:</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("idkhucn",null,"--Chọn khu phân quyền",new { @id="ddlKhucn",@class="form-control"})
                    </div>

                </div>

                <div class="form-group">
                   
                    <label for="txtdiachi" class="col-sm-2 control-label"> Địa chỉ:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.diachi, new { @id = "txtdiachi", @class = "form-control" })
                    </div>

                    <label for="txttp" class="col-sm-2 control-label"> Thành phố:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.thanhpho, new { @id = "txttp", @class = "form-control" })
                    </div>

                    <label for="txtdienthoai" class="col-sm-2 control-label"> Điện thoại:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.dienthoai, new { @id = "txtdienthoai", @class = "form-control" })
                    </div>

                </div>

                <div class="form-group">                  

                    <label for="txtfa" class="col-sm-2 control-label"> Fax:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.fax, new { @id = "txtfa", @class = "form-control" })
                    </div>

                    <label for="txtmst" class="col-sm-2 control-label"> Mã số thuế:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.masothue, new { @id = "txtmst", @class = "form-control" })
                    </div>

                    <label for="chk" class="col-sm-2 control-label"> Trạng thái:</label>
                    <div class="col-sm-2">
                        @Html.CheckBoxFor(model => model.trangthai, new { @id = "chk", @class = "form-control",@disabled="disabled" })
                    </div>

                </div>

                <div class="form-group">

                    <label for="txtnguoitao" class="col-sm-2 control-label">   Người tạo:</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nguoitao, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                    <label for="txtngaytao" class="col-sm-2 control-label">   Ngày tạo:</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.ngaytao, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                </div>

                <div class="col-sm-offset-2">
                    <button name="submit" class="btn btn-primary" id="btnSave"><i class="fa fa-save"></i>Lưu</button>
                    @*<button class="btn btn-primary" id="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i>Hủy</button>*@
                    @Html.ActionLink("Hủy", "Cancel", "CN", null, new { @class = "btn btn-danger fa fa-close" })
                </div>

            }

        </div>
    </div>
</div>

