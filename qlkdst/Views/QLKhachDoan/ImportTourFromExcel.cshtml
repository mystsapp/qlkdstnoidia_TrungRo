<div class="wthree_general graph-form agile_info_shadow ">
    <h3 class="w3_inner_tittle two">THÊM TOUR TỪ FILE EXCEL</h3>

    <div class="grid-1">
        <div class="form-body">

            @using (Html.BeginForm("ImportTourFromExcel", "QLKhachDoan", FormMethod.Post, new { @class = "form-horizontal", @id = "frmImportExcel", enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">   Download file mẫu:</label>
                    <div class="col-sm-10">
                        <a href="~/ExcelFiles/Tour/dulieudoansample.xlsx" target="_blank">Danh mục tour Excel mẫu</a>
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">   Chọn file:</label>
                    <div class="col-sm-10">
                        <input type="file" id="dataFile" name="uploadExcel" class="form-control" />
                    </div>
                </div>

                <div class="col-sm-offset-2">
                    <button name="submit" class="btn btn-primary" id="btnSave"><i class="fa fa-save"></i>Lưu</button>
                    @Html.ActionLink("Hủy", "Cancel", "QLKhachDoan", null, new { @class = "btn btn-danger fa fa-close" })
                </div>


            }



        </div>
    </div>
    <br />
    @if (TempData["AlertMessage"] != null)
    {
        <div class='@TempData["AlertType"]' role="alert">
            <pre> @TempData["AlertMessage"]</pre>
        </div>

        TempData["AlertType"] = null;
        TempData["AlertMessage"] = null;
    }

</div>



